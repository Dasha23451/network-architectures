@startuml
start
:Отобразить главное окно (MainWindow);
partition "Режим тестирования" {
  if ("Нажата кнопка 'Тестирование'?") then (да)
    :Открыть TestSelectionDialog;
    :Пользователь выбирает тест;
    :Открыть TestWindow с выбранным тестом;
    repeat
      :Отобразить текущий вопрос;
      :Пользователь выбирает ответ;
      :Нажать "Следующий"/"Предыдущий";
    repeat while (Есть ещё вопросы?)
    :Нажать "Завершить тест";
    :Подсчитать результат;
    :Показать результаты теста;
  else (нет)
  endif
}
partition "Режим редактирования" {
  if ("Нажата кнопка 'Редактирование'?") then (да)
    :Открыть LoginDialog;
    :Пользователь вводит пароль;
    if ("Пароль верен?") then (да)
      :Открыть EditWindow;
      :Редактировать тесты и вопросы;
    else (нет)
      :Показать сообщение об ошибке;
    endif
  endif
}
stop
@enduml